<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ngagroupinc.movers.MainActivity"
    android:background="#ccf1eeee">

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_sign_in"
        android:gravity="center_horizontal"
        android:layout_above="@id/llv_signin_form"
        android:textSize="80sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#000000"
        />
    <LinearLayout
        android:id="@+id/llv_signin_form"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#ffffff"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
<EditText
    android:id="@+id/ed_email"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:hint="@string/ed_email"
    android:textSize="40sp"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/relativelayoutborder"
    android:inputType="textWebEmailAddress"
    />
        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="@string/ed_passsword"
            android:textSize="40sp"

            android:background="@drawable/relativelayoutborder"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="60dp"
            android:background="@drawable/green_large_rounded"
            android:text="@string/btn_sign_in"
            android:textColor="#ffffff"
            />
        <RelativeLayout
            android:id="@+id/rll_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_margin="40dp"
           >
            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/fb_btn"
                android:layout_gravity="start"


                />
            <TextView
                android:id="@+id/tv_fb_sign_in"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/tv_fb_signin"
                android:textSize="30sp"
                android:textStyle=""
                android:fontFamily=""
                android:background="#c5e1e4e1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/iv_fb"
                android:layout_toEndOf="@+id/iv_fb" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_forgot_pass"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="#479c67"/>

    </LinearLayout>
</RelativeLayout>
