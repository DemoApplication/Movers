<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_margin_top"
    tools:context="com.ngagroupinc.movers.HomeActivity"
    android:background="@color/home_background">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_logo"
    android:src="@drawable/logo"
    android:layout_marginTop="30dp"
    android:layout_alignParentTop="true"/>


        <TextView
            android:id="@+id/tv_already"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_tv_already_size"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/llv_signup"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/login_already_text"
             />



    <LinearLayout
        android:id="@+id/llv_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/llv_signup_email"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/green_small_rounded">

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/emai"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/home_iv_email_margin_left"
                 />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/home_tv_signup_email"
                android:layout_centerInParent="true"
                android:textSize="@dimen/home_tv_email_size"
                android:layout_marginLeft="@dimen/home_tv_email_margin_left"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                style="@style/tv_email_fb_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llv_signup_fb"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/green_small_rounded"
            android:layout_marginTop="@dimen/home_tv_fb_top_size">

            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/fb"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/home_iv_fb_margin_left"
                 />

            <TextView
                android:id="@+id/tv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tv_signup_fb"
                android:layout_centerInParent="true"
                android:textSize="@dimen/home_tv_fb_size"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="@dimen/home_tv_fb_margin_left"
                android:layout_gravity="center"
                style="@style/tv_email_fb_color"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
